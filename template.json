{
  "variables": {
    "boot_command": " <wait> <wait> <wait> <wait> <wait><esc><wait><f6><wait><esc><wait><bs><bs><bs><bs><wait> autoinstall<wait5> ds=nocloud-net<wait5>;s=http://<wait5>{{ .HTTPIP }}<wait5>:{{ .HTTPPort }}/<wait5> ---<wait5><enter><wait5>",
    "boot_wait": "10s",
    "box_basename": "Ubuntu-Desktop",
    "build_directory": "build",
    "compression_level": "9",
    "cpus": "2",
    "description": "Ubuntu Desktop",
    "disk_size": "80000",
    "guest_additions_url": "",
    "headless": "false",
    "http_directory": "http",
    "http_proxy": "{{ env `HTTP_PROXY` }}",
    "https_proxy": "{{ env `HTTPS_PROXY` }}",
    "hyperv_generation": "2",
    "hyperv_switch": "bento",
    "iso_checksum_url": "https://mirror.arizona.edu/ubuntu-releases/20.10/SHA256SUMS",
    "iso_url": "https://mirror.arizona.edu/ubuntu-releases/20.10/ubuntu-20.10-live-server-amd64.iso",
    "iso_version": "20.10",
    "latestos_tag": "ubuntu",
    "memory": "2048",
    "no_proxy": "{{ env `NO_PROXY` }}",
    "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_timeout": "30m",
    "ssh_username": "vagrant",
    "vagrantup_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "vagrantup_user": "ProfessorManhattan",
    "vm_name": "{{ user `box_basename` }}-{{ user `iso_version` }}"
  },
  "builders": [
    {
      "type": "hyperv-iso",
      "boot_command": "{{ user `boot_command` }}",
      "boot_wait": "{{ user `boot_wait` }}",
      "communicator": "ssh",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "enable_secure_boot": false,
      "generation": "{{user `hyperv_generation`}}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "switch_name": "{{ user `hyperv_switch` }}",
      "vm_name": "{{ user `box_basename` }}-{{ user `iso_version` }}"
    },
    {
      "type": "parallels-iso",
      "boot_command": "{{ user `boot_command` }}",
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "ubuntu",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "parallels_tools_flavor": "lin",
      "prlctl_version_file": ".prlctl_version",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "vm_name": "{{ user `vm_name` }}"
    },
    {
      "type": "qemu",
      "boot_command": "{{ user `boot_command` }}",
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "vm_name": "{{ user `vm_name` }}"
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        " <wait>",
        " <wait>",
        " <wait>",
        " <wait>",
        " <wait>",
        "<esc><wait>",
        "<f6><wait>",
        "<esc><wait>",
        "<bs><bs><bs><bs><wait>",
        " autoinstall<wait5>",
        " ds=nocloud-net<wait5>",
        ";s=http://<wait5>{{.HTTPIP}}<wait5>:{{.HTTPPort}}/<wait5>",
        " ---<wait5>",
        "<enter><wait5>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_additions_url": "{{ user `guest_additions_url` }}",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `vm_name` }}"
    },
    {
      "type": "vmware-iso",
      "boot_command": "{{ user `boot_command` }}",
      "boot_wait": "{{ user `boot_wait` }}",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "ubuntu-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ user `box_basename` }}-{{ user `iso_version` }}-{{ .Provider }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "tools_upload_flavor": "linux",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "{{ user `compression_level` }}",
        "output": "{{ user `build_directory` }}/{{ user `box_basename` }}.{{ .Provider }}.box"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{ user `vagrantup_token` }}",
        "box_tag": "{{ user `vagrantup_user` }}/{{ user `box_basename` }}",
        "version_description": "{{ user `description` }} version {{ user `iso_version` }}",
        "version": "{{ user `iso_version` }}"
      }
    ]
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "HTTP_PROXY={{ user `http_proxy` }}",
        "HTTPS_PROXY={{ user `https_proxy` }}",
        "NO_PROXY={{ user `no_proxy` }}"
      ],
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E sh -eux '{{ .Path }}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/update.sh",
        "scripts/sshd.sh",
        "scripts/networking.sh",
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/vmware.sh",
        "scripts/parallels.sh",
        "scripts/hyperv.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh",
        "scripts/desktop.custom.sh"
      ],
      "type": "shell"
    }
  ]
}
